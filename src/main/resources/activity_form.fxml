<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synergy.controller.fx.ActivityFormController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Nuova Attività" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Titolo:"/>
    <TextField fx:id="titleField" promptText="Es. Correggere bug login"/>

    <HBox spacing="15">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Priorità:"/>
            <ComboBox fx:id="priorityBox" maxWidth="Infinity"/>
        </VBox>
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Scadenza:"/>
            <DatePicker fx:id="deadlinePicker" maxWidth="Infinity"/>
        </VBox>
    </HBox>

    <Label text="Sotto-attività (una per riga, opzionale per creare un Gruppo):"/>
    <TextArea fx:id="subtasksArea" prefRowCount="4" promptText="Sotto-task 1&#10;Sotto-task 2"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annulla" onAction="#handleCancel" style="-fx-background-color: transparent; -fx-border-color: #ccc; -fx-border-radius: 3;"/>
        <Button text="Salva Attività" onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>