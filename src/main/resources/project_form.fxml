<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synergy.controller.fx.ProjectFormController">
    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Nuovo Progetto" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="Nome Progetto:"/>
    <TextField fx:id="nameField" promptText="Es. Rifacimento Sito Web"/>

    <Label text="Descrizione:"/>
    <TextArea fx:id="descField" promptText="Descrivi brevemente l'obiettivo..." prefRowCount="4"/>

    <Label text="Scadenza (Opzionale):"/>
    <DatePicker fx:id="deadlinePicker" maxWidth="Infinity"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annulla" onAction="#handleCancel"/>
        <Button text="Salva Progetto" onAction="#handleSave" style="-fx-background-color: #14b8a6; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>
</VBox>