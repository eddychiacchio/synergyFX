<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<StackPane style="-fx-background-color: #0f172a;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synergy.controller.fx.LoginController">
    
    <VBox alignment="CENTER" spacing="20.0" maxWidth="400" maxHeight="450" 
          style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 25, 0, 0, 10);">
        <padding>
            <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
        </padding>

        <VBox alignment="CENTER" spacing="10.0" style="-fx-margin-bottom: 10;">
            <Circle radius="22" fill="transparent" stroke="#22d3ee" strokeWidth="4" />
            <Label text="Bentornato" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1f2937;"/>
            <Label text="Accedi al tuo account Synergy" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        </VBox>

        <VBox spacing="15.0" prefWidth="320">
            <VBox spacing="4.0">
                <Label text="EMAIL" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <TextField fx:id="emailField" promptText="mario@synergy.com" 
                           style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-prompt-text-fill: #9ca3af;"/>
            </VBox>

            <VBox spacing="4.0">
                <Label text="PASSWORD" style="-fx-font-size: 11px; -fx-font-weight: bold; -fx-text-fill: #6b7280;"/>
                <PasswordField fx:id="passwordField" promptText="••••••••" 
                               style="-fx-font-size: 14px; -fx-padding: 12; -fx-background-color: #f9fafb; -fx-border-color: #e5e7eb; -fx-border-radius: 8; -fx-background-radius: 8; -fx-prompt-text-fill: #9ca3af;"/>
            </VBox>
        </VBox>

        <Button text="Accedi" onAction="#handleLogin" maxWidth="Infinity" 
                style="-fx-background-color: #0891b2; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 8; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(8, 145, 178, 0.4), 10, 0, 0, 4);"/>

        <Label fx:id="errorLabel" text="" style="-fx-text-fill: #ef4444; -fx-font-size: 13px; -fx-font-weight: bold;"/>

        <HBox alignment="CENTER" spacing="5">
            <Label text="Non hai un account?" style="-fx-text-fill: #6b7280; -fx-font-size: 14px;"/>
            <Hyperlink text="Registrati" onAction="#goToRegister" 
                       style="-fx-text-fill: #0891b2; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: transparent; -fx-padding: 0;"/>
        </HBox>
    </VBox>
</StackPane>