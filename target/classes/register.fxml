<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.synergy.controller.fx.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Crea Account" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <TextField fx:id="nameField" promptText="Nome Completo" maxWidth="300"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="300"/>
    
    <Button text="Registrati" onAction="#handleRegister" style="-fx-background-color: #14b8a6; -fx-text-fill: white;" maxWidth="300"/>
    
    <Hyperlink text="Torna al Login" onAction="#backToLogin"/>
    
    <Label fx:id="msgLabel" text=""/>
</VBox>